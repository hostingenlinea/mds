// server/prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pastor {
  id              String   @id @default(uuid())
  nombre          String
  apellido        String
  dni             String   @unique
  estado          String   @default("HABILITADO") // HABILITADO, SUSPENDIDO
  fotoUrl         String?
  iglesiaNombre   String?
  direccion       String?
  ficheroCulto    String?
  createdAt       DateTime @default(now())
}